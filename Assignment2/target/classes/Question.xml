<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
   
   <bean id="question" class="com.assignments.Question">
   <property name="questionId" value="101"/>
   <property name="question" value="what is spring"/>
   <property name="answers">
   <list>
               <value>Spring is a lightweight framework</value>
               <value>It is a Framework</value>
               <value>it is developed in 2003</value>
   </list>
   </property>
   </bean>
   
   <bean id="question1" class="com.assignments.Question">
   <property name="questionId" value="102"/>
   <property name="question" value="what is spring"/>
   <property name="answersSet">
   <set>
       <value>Spring is a lightweight framework</value>
       <value>It is a Framework</value>
       <value>it is developed in 2003</value>
   </set>
   </property>
   </bean>
   
   <bean id="question2" class="com.assignments.Question">
   <property name="questionId" value="103"/>
   <property name="question" value="what is spring"/>
   <property name="answersMap">
   <map>
           <entry key="1" value="Spring is a lightweight framework"/>
           <entry key="2" value="It is a Framework"/>
           <entry key="3" value="it is developed in 2003"/>
           
   </map>
   </property>
   </bean>
   </beans>